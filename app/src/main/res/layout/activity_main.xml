<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorInputBackGround"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="45sp"
        android:gravity="end"
        android:padding="32dp"
        android:textColor="@android:color/white"
        android:background="@color/colorInputBackGround"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraint"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/container1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/container2">

            <Button
                android:id="@+id/buDiv"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/buMul"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/buSub"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/buSum"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/buEqual"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="="
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="0.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/container3"
            app:layout_constraintEnd_toStartOf="@id/container1">

            <Button
                android:id="@+id/buPercentage"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu9"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu6"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu3"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/buDot"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="."
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="0.5dp"
            app:layout_constraintEnd_toStartOf="@id/container2"
            app:layout_constraintStart_toEndOf="@id/container4"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/buPlusOrMin"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+/-"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu8"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu5"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu2"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0.5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/container3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/butAC"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AC"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu7"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu4"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

            <Button
                android:id="@+id/bu1"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginBottom="0.5dp"
                android:padding="32dp"
                android:textAllCaps="false"
                android:background="@color/colorGray"/>

        </LinearLayout>

        <Button
            android:id="@+id/bu0"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:padding="32dp"
            android:textAllCaps="false"
            android:background="@color/colorGray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/container3"
            app:layout_constraintTop_toBottomOf="@id/container4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
